@model Vidly.ViewModels.MoviesListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.movies.Count > 0)
{
    <ul>
        @foreach(var movie in Model.movies) 
        { 
            <li>@movie.Name</li>
        }
    </ul>
}
else
{
    <text>Sorry, no movies in database.</text>
}

